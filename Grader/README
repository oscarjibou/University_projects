function Lmillas = convKM2millas(Lkm)
    % Insertar el codigo
    factorConversion = 0.621371;
    Lmillas = Lkm * factorConversion;
end

 matlab -batch "Lkm = [42, 180, 212]; Lmillas = src(Lkm); disp(Lmillas)" 

